@model Project_Managment.Models.Asset
@{
    ViewBag.Title = "Details";
}
<div class="header">
    <img class="header_logo" src="~/Images/Device.png" />
    <h4>Device Details</h4>

</div>
<div class="search_bar">
    @using (Html.BeginForm("Search", "Assets", FormMethod.Get))
    {
        //the following are search options
        <b> Search Option: </b>@Html.RadioButton("option", "Service_Tag", true) <text>Service Tag</text>
        @Html.RadioButton("option", "Serial_No") <text > Serial No. </text>
        @Html.TextBox("search") <input class="btn btn-primary btn-sm" type="submit"
                                       name="submit"
                                       value="Search" />
    }
</div>




<div class="table-responsive">
    
        <div class="table table-striped table-hover ">
            <div class="panel panel-primary">
                <div class="panel panel-heading">
                    Device Information
                </div>      
            </div>
            <div class="container col-md-11">
                <div class="panel panel-primary">
                    @*<div class="panel panel-heading" style="margin-bottom: 3px;">
                        @Html.DisplayNameFor(model => model.Comments)
                    </div>*@

                    <div class="panel-body" style="border: 1px thin">
                        <div>
                            <div style="margin-bottom: 0px" class="col-lg-14">
                                <div class="col-lg-12 well" style="border: 1px solid #a1a1a1; border-radius: 3px; padding: 15px;">
                                    <dl class="dl-horizontal">
                                        <dt>
                                            Asset Description:
                                        </dt>
                                        <dd>
                                            @Html.DisplayFor(model => model.AssetDescription)
                                        </dd>
                                        <dt>
                                            Currently Assigned Employee:
                                        </dt>
                                        <dd>
                                            @Html.DisplayFor(model => model.Employees.FirstName)
                                            @Html.DisplayFor(model => model.Employees.LastName)
                                        </dd>
                                        <dt>
                                            Device Type:
                                        </dt>
                                        <dd>
                                            @Html.DisplayFor(model => model.Asset_Category.AssetCategory)
                                        </dd>
                                        <dt>
                                            Current Status:
                                        </dt>
                                        <dd>
                                            @Html.DisplayFor(model => model.Status.Status1)
                                        </dd>
                                        <dt>
                                            Department:
                                        </dt>
                                        <dd>
                                            @Html.DisplayFor(model => model.Department.DepartmentName)
                                        </dd>
                                        <dt>
                                            Vendor Name:
                                        </dt>
                                        <dd>
                                            @Html.DisplayFor(model => model.Vendor.VendorName)
                                        </dd>
                                        <dt>
                                            Make:
                                        </dt>
                                        <dd>
                                            @Html.DisplayFor(model => model.Make)
                                        </dd>
                                        <dt>
                                            Model Number:
                                        </dt>
                                        <dd>
                                            @Html.DisplayFor(model => model.ModelNumber)
                                        </dd>
                                        <dt>
                                            Serial Number:
                                        </dt>
                                        <dd>
                                            @Html.DisplayFor(model => model.SerialNumber)
                                        </dd>
                                        <dt>
                                            Date Acquired:
                                        </dt>

                                        <dt>
                                            @Html.DisplayNameFor(model => model.Processor)
                                        </dt>
                                        <dd>
                                            @Html.DisplayFor(model => model.Processor)
                                        </dd>
                                        <dt>
                                            @Html.DisplayNameFor(model => model.RAM)
                                        </dt>
                                        <dd>
                                            @Html.DisplayFor(model => model.RAM)
                                        </dd>
                                        <dt>
                                            @Html.DisplayNameFor(model => model.Condition)
                                        </dt>
                                        <dd>
                                            @Html.DisplayFor(model => model.Condition)
                                        </dd>
                                        <dt>
                                            @Html.DisplayNameFor(model => model.ComputerName)
                                        </dt>
                                        <dd>
                                            @Html.DisplayFor(model => model.ComputerName)
                                        </dd>

                                        <dt>
                                            @Html.DisplayNameFor(model => model.ManagerListID)
                                        </dt>                                 
                                        <dd>
           
                                        </dd>

                                    </dl>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            
            <div class="container col-md-11">
                <div class="panel panel-primary">
                    <div class="panel panel-heading" style="margin-bottom: 3px;">
                       Status Info
                    </div>

                    <div class="panel-body" style="border: 1px thin">
                        <div>
                            <div class="well well-sm" style="border: 1px solid #a1a1a1; border-radius: 3px; margin-bottom: 0px">
                                <div>
                                    <dd>
                                        @Html.DisplayFor(model => model.DateAcquired)
                                    </dd>
                                    <dt>
                                        Date Sold:
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.DateSold)
                                    </dd>
                                    <dt>
                                        Purchase Price:
                                    </dt>
                                    <dd>
                                        $@Html.DisplayFor(model => model.PurchasePrice)
                                    </dd>
                                    <dt>
                                        @Html.DisplayNameFor(model => model.DepreciationMethod)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.DepreciationMethod)
                                    </dd>
                                    <dt>
                                        @Html.DisplayNameFor(model => model.DepreciableLife)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.DepreciableLife)
                                    </dd>
                                    <dt>
                                        @Html.DisplayNameFor(model => model.SalvageValue)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.SalvageValue)
                                    </dd>
                                    <dt>
                                        @Html.DisplayNameFor(model => model.CurrentValue)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.CurrentValue)
                                    </dd>
                                    <dt>
                                        @Html.DisplayNameFor(model => model.Description)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.Description)
                                    </dd>
                                    <dt>
                                        @Html.DisplayNameFor(model => model.NextSchedMaint)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.NextSchedMaint)
                                    </dd>

                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        <div class="container col-md-11">
            <div class="panel panel-primary">
                <div class="panel panel-heading" style="margin-bottom: 3px;">
                    @Html.DisplayNameFor(model => model.Comments)
                </div>

                <div class="panel-body" style="border: 1px thin">
                    <div>
                        <div class="well well-sm" style="border: 1px solid #a1a1a1; border-radius: 3px; margin-bottom: 0px">
                            @Html.DisplayFor(model => model.Comments)
                        </div>           
                    </div>
                   
                </div>
            </div>
        </div>

        <div style="width: 40%; float: none">
            <p>
                @Html.ActionLink("Edit", "Edit", new { id = Model.AssetID }, htmlAttributes: new { @class = "btn btn-primary" })

                @Html.ActionLink("Delete", "Delete", new { id = Model.AssetID }, htmlAttributes: new { @class = "btn btn-primary" })
                @Html.ActionLink("Back to List", "Index", "", htmlAttributes: new { @class = "btn btn-primary" })
            </p>

        </div>

    </div>
</div>