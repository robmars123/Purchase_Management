@model IEnumerable<Project_Managment.Models.Invoice>

@{
    ViewBag.Title = "Invoices";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<div class="header">
    <img class="header_logo" src="~/Images/home_icon.png" />

    <h4>Invoices</h4>
    <div class="myButton">
        @Html.ActionLink("Add Invoice", "Create")
    </div>
</div>
<div class="search_bar">
    @using (Html.BeginForm("Index", "Invoices", FormMethod.Get))
    {
        //the following are search options
        <b> Search Option: </b>@Html.RadioButton("option", "Invoice", true) <text>Invoice</text>
        @Html.RadioButton("option", "Case Name") <text> Case Name </text>
        @Html.RadioButton("option", "Date")<text>Date</text>
        @Html.TextBox("search") <input class="btn btn-primary btn-sm" type="submit"
                                       name="submit"
                                       value="Search" />
    }
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover ">
        <tr class="columns">
            <th>
                Firm Invoice
            </th>
            <th>
                Case Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                Invoice Date
            </th>
            <th>
                Appealable Items
            </th>
            <th>
                Total Billed
            </th>
            <th>
                Attached File(s)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Firm_Invoice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Case_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Invoice_Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Appealable_Items)
                </td>
                <td>
                    $@Html.DisplayFor(modelItem => item.Total_Billed)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.pdf)
                </td>
                <td style="width: 35%; float: none">
                    @Html.ActionLink("Manage", "Edit", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-primary" })
                    @Html.ActionLink("Invoice Page", "Details", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-primary" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-primary" })
                </td>
            </tr>
        }

    </table>
</div>

