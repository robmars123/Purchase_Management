@model Project_Managment.Models.Invoice


@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Invoice</h4>
    <hr />
    <div class="container">
        <div class="col-sm-6">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Employee Details</h3>
                </div>
                <div class="panel-body">
                    <dl class="dl-horizontal">
                        <dt>
                            Firm Invoice
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Firm_Invoice)
                        </dd>

                        <dt>
                            Case Name
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Case_Name)
                        </dd>

                        <dt>
                            Status
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Status)
                        </dd>

                        <dt>
                           Invoice Date
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Invoice_Date)
                        </dd>

                        <dt>
                           Appealable Items
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Appealable_Items)
                        </dd>

                        <dt>
                            Total Billed
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Total_Billed)
                        </dd>

                        <dt>
                           PDF File Name
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.FileName)
                        </dd>
                    </dl>
                </div>

        </div>
            <p>
                @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
                @Html.ActionLink("Back to List", "Index")
            </p>
    </div>
    <div class="col-sm-6">
        <div class="panel panel-primary" style="padding-bottom: 10px;">
            <div class="panel-heading">     
                    <h3 class="panel-title">PDF (@Html.DisplayFor(model => model.FileName))</h3>
                </div>
            <div style="margin: 15px; margin-bottom: 5px;">
                @Html.ActionLink("Download", "DownloadFile", new { id = Model.Id }, htmlAttributes: new { @class = "btn btn-primary" })
            </div>
       </div>
    </div>

</div>
</div>