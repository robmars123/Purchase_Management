@model Project_Managment.Models.Employee

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Employee</h4>
    <hr />
    <div class="container">
        <div class="col-sm-7" style="margin-left: 20%;">
            <div class="panel panel-primary" style="padding-bottom: 10px;">
                <div class="panel-heading">
                    <h3 class="panel-title" style="text-align:center">Employee Details</h3>
                </div>
                <div class="panel-body" style="margin:auto;">
                    <dl class="dl-horizontal">
                        <dt>
                            Department Name
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Department.DepartmentName)
                        </dd>



                        <dt>
                            Position
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Group.GroupName)
                        </dd>

                        <dt>
                            First Name
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.FirstName)
                        </dd>

                        <dt>
                            Last Name
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.LastName)
                        </dd>

                        <dt>
                          Office Location
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.OfficeLocation)
                        </dd>
                        @*<dd>
                                @Html.DisplayFor(model => model..)
                            </dd>*@

                    </dl>
                </div>
                <div style="float: none">
                 <div class="col-lg-4"></div>
                    <div class="btn btn-primary"> @Html.ActionLink("Edit", "Edit", new { id = Model.EmployeeID }) </div>
                        <div class="btn btn-primary">@Html.ActionLink("Back to List", "Index")</div>
                
                </div>


            </div>
        </div>
    </div>
</div>
