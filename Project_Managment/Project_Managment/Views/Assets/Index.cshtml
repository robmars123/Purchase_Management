@model IEnumerable<Project_Managment.Models.Asset>
@{
    ViewBag.Title = "Index";
}
<div class="header">
    <img class="header_logo" src="~/Images/home_icon.png" />
    <h4>Dashboard</h4>
    <div class="myButton">
        @Html.ActionLink("Add Device", "Create")
    </div>
</div>
<div class="wrapper">
    <table class="table">

        <tr class="columns">



            <th>
                @Html.DisplayNameFor(model => model.Make)
            </th>
            <th>
                Assigned User

            </th>
            <th>
                Device Type
            </th>
            <th>
                Current Status
            </th>
            <th>
                Department
            </th>
            <th>
                Vendor Name
            </th>

        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(item.Make))
                {
                        @Html.ActionLink(item.Make, "Details", new { id = item.AssetID })
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employees.FirstName)
                    @Html.DisplayFor(modelItem => item.Employees.LastName)

                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Asset_Category.AssetCategory)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status.Status1)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Department.DepartmentName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Vendor.VendorName)
                </td>

            </tr>
        }
    </table>
    </div>