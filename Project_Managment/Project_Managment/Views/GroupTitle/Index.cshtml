@model IEnumerable<Project_Managment.Models.Employee>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="header">
    <img class="header_logo" src="~/Images/home_icon.png" />
    <h4>Assets</h4>
    <div class="myButton">
        @Html.ActionLink("Add Device", "Create")
    </div>
</div>
<div class="search_bar">
    @using (Html.BeginForm("Index", "Assets", FormMethod.Get))
    {
        //the following are search options
        <b> Search Option: </b>@Html.RadioButton("option", "Name", true) <text>Name</text>
        @Html.RadioButton("option", "Department") <text > Department </text>
        @Html.RadioButton("option", "Make")<text>Make</text>
        @Html.TextBox("search") <input class="btn btn-primary btn-sm" type="submit"
                                       name="submit"
                                       value="Search" />
    }
</div>

<div class="wrapper">



    <table class="table">

        <tr class="columns">
            <th>
                @Html.DisplayNameFor(model => model.Department.DepartmentName)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Group.GroupName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OfficeLocation)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Department.DepartmentName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Group.GroupName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OfficeLocation)
                </td>
                <td style="width: 20%; float: none">
                    @Html.ActionLink("Edit", "Edit", new { id = item.EmployeeID }, htmlAttributes: new { @class = "btn btn-primary" }) 
                    @Html.ActionLink("Details", "Details", new { id = item.EmployeeID }, htmlAttributes: new { @class = "btn btn-primary" }) 
                    @Html.ActionLink("Delete", "Delete", new { id = item.EmployeeID }, htmlAttributes: new { @class = "btn btn-primary" })
                </td>
            </tr>
        }

    </table>
    </div>