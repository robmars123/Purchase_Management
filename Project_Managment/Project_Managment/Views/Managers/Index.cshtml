@model IEnumerable<Project_Managment.Models.Manager>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Asset.AssetDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Employees.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PromotionDate)
        </th>
