            @Html.DisplayNameFor(model => model.AssetID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeID)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Asset.AssetDescription)
        </td>
        <td>
            @Html.ActionLink(item.Employees.FirstName, "Details", "Employees", new { id = item.EmployeeID }, null)
